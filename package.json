{
  "name": "ngx-toastr",
  "description": "Toastr for Angular",
  "homepage": "https://github.com/scttcper/ngx-toastr",
  "bugs": "https://github.com/scttcper/ngx-toastr/issues",
  "repository": "https://github.com/scttcper/ngx-toastr.git",
  "version": "6.5.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "rimraf dist && ts-node build.ts",
    "publish": "cd dist/packages-dist && npm publish",
    "bundlesize": "bundlesize",
    "test": "ng test",
    "cleanup": "rimraf build dist waste deploy",
    "ghpages": "ng build --prod --build-optimizer --aot --no-progress --baseHref='/ngx-toastr/'",
    "lint": "ng lint --type-check -t stylish",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.2",
    "@angular/common": "^5.0.2",
    "@angular/compiler": "^5.0.2",
    "@angular/core": "^5.0.2",
    "@angular/forms": "^5.0.2",
    "@angular/platform-browser": "^5.0.2",
    "@angular/platform-browser-dynamic": "^5.0.2",
    "@angular/router": "^5.0.2",
    "bootstrap": "4.0.0-beta.2",
    "core-js": "^2.5.1",
    "lodash-es": "^4.17.4",
    "rxjs": "^5.5.2",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "1.5.3",
    "@angular/compiler-cli": "^5.0.2",
    "@angular/language-service": "^5.0.2",
    "@types/jasmine": "^2.8.2",
    "@types/jasminewd2": "^2.0.3",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^8.0.53",
    "bundlesize": "^0.15.3",
    "codelyzer": "^4.0.1",
    "copy": "^0.3.1",
    "fs-extra": "^4.0.2",
    "jasmine-core": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "^5.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.51.8",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "bundlesize": [
    {
      "path": "./dist/packages-dist/toastr.umd.js",
      "maxSize": "8 kB"
    },
    {
      "path": "./dist/packages-dist/toastr.css",
      "maxSize": "3 kB"
    }
  ]
}
